<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.BooksController"
            prefHeight="400.0" prefWidth="600.0">
    <stylesheets>
        <URL value="@main.css"/>
    </stylesheets>

    <fx:define>
        <VBox fx:id="book" spacing="8">
            <HBox alignment="CENTER"><Rectangle width="100" height="130" styleClass="bookCover"/></HBox>
            <Label text="Pealkiri" styleClass="titleText"/>
            <Label text="Autor" styleClass="authorText"/>
        </VBox>
    </fx:define>

</AnchorPane>
